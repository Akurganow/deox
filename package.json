{
  "name": "flux-typesafe",
  "version": "0.0.0",
  "description": "Typesafe Flux Standard Utilities",
  "types": "dist/index.d.ts",
  "main": "dist/index.js",
  "module": "dist/index.esm.js",
  "browser": "dist/index.umd.js",
  "repository": "https://github.com/thebrodmann/flux-typesafe",
  "author": "Mohammad Hasani <atretoname@gmail.com> (https://github.com/thebrodmann)",
  "license": "MIT",
  "files": [
    "dist"
  ],
  "scripts": {
    "test": "jest",
    "test:watch": "npm run test --watch",
    "prebuild": "npm run clean",
    "build": "tsc -p tsconfig.build.json && rollup -c",
    "postbuild": "rimraf tmp",
    "clean": "rimraf tmp dist",
    "fix": "tslint -p . --fix",
    "pretty": "prettier --write"
  },
  "dependencies": {
    "tslib": "^1.9.3"
  },
  "devDependencies": {
    "@types/jest": "^23.3.12",
    "@types/node": "^10.12.18",
    "husky": "^1.3.1",
    "jest": "^23.6.0",
    "lint-staged": "^8.1.0",
    "rimraf": "^2.6.3",
    "rollup": "^1.1.0",
    "rollup-plugin-commonjs": "^9.2.0",
    "rollup-plugin-filesize": "^6.0.0",
    "rollup-plugin-node-resolve": "^4.0.0",
    "rollup-plugin-sizes": "^0.4.2",
    "rollup-plugin-sourcemaps": "^0.4.2",
    "rollup-plugin-terser": "^4.0.2",
    "ts-jest": "^23.10.5",
    "tslint": "^5.12.1",
    "tslint-config-prettier": "^1.17.0",
    "tslint-config-standard": "^8.0.1",
    "typescript": "^3.2.2"
  },
  "keywords": [
    "reducer",
    "action",
    "typesafe",
    "redux",
    "react",
    "angular",
    "rxjs",
    "ngrx",
    "typescript",
    "action-creator"
  ],
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged && npm run test"
    }
  },
  "lint-staged": {
    "*.ts": [
      "npm run fix",
      "git add"
    ],
    "*.{md,json,js}": [
      "npm run pretty",
      "git add"
    ]
  }
}
